<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/button"
        android:layout_above="@+id/stop">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal|bottom" />

        <!-- Button
            android:id="@+id/btnCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            android:text="@string/btn_capture" /-->

    </FrameLayout>








    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/btnConnect"
        android:onClick="onBtnConnectTap"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Pictures"
        android:id="@+id/button"
        android:layout_alignTop="@+id/btnConnect"
        android:layout_alignParentStart="true"
        android:onClick="onBtnTakePic" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Taking"
        android:layout_gravity="left|bottom"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="104dp"
        android:layout_alignEnd="@+id/layout"
        android:id="@+id/stop"
        android:onClick="onBtnStopPic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_alignBottom="@+id/stop"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnConnect"
        android:imeOptions="actionDone"
        android:hint="interval"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Altitude"
        android:id="@+id/alt"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Latitude"
        android:id="@+id/lat"
        android:layout_below="@+id/alt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Longitude"
        android:id="@+id/lon"
        android:layout_below="@+id/lat"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0m"
        android:id="@+id/altnum"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0deg"
        android:id="@+id/latnum"
        android:layout_below="@+id/altnum"
        android:layout_alignStart="@+id/altnum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0deg"
        android:id="@+id/lonnum"
        android:layout_below="@+id/latnum"
        android:layout_alignStart="@+id/latnum" />

</RelativeLayout>
